<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@color/black_lightest"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayoutListItemArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageViewDrawerItemIcon"
            android:layout_width="@dimen/left_drawer_item_image_view_width"
            android:layout_height="@dimen/left_drawer_item_image_view_width"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/nav_drawer_item_image_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewDrawerItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/nav_drawer_item_title_margin_left"
                android:layout_marginRight="@dimen/nav_drawer_item_title_margin_right"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/nav_drawer_item_title_text_size" />

            <TextView
                android:id="@+id/TextViewDrawerItemSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/nav_drawer_item_subtitle_margin_left"
                android:layout_marginRight="@dimen/nav_drawer_item_subtitle_margin_right"
                android:maxLines="1"
                android:textColor="@color/white_hint"
                android:textSize="@dimen/nav_drawer_item_subtitle_text_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageViewLeftDrawerItemArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="@dimen/nav_drawer_item_arrow_padding"
            android:scaleType="fitStart"
            android:src="@drawable/bottom_arrow_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutExpandableArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>
</LinearLayout>